@model Actor

@{
    ViewData["Title"] = "Add a new actor";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-sm">
            <p>
                <h1>Add a New Actor</h1>
            </p>
        </div>
        <div class="row d-flex justify-content-center">
            <div class="col-md-8">

                @*Form Start*@
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group text-center">
                        <img id="ProfilePicturePreview" class="border-info rounded-circle" style="max-width: 150px" />
                    </div>
                    <div class="form-group text-center">
                        <img id="ProfilePicturePreview" />
                    </div>

                    <div class="form-group">
                        <label asp-for="ProfilePictureURL" class="control-label"></label>
                        <input asp-for="ProfilePictureURL" class="form-control" required />
                        <span asp-validation-for="ProfilePictureURL" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="FullName" class="control-label"></label>
                        <input asp-for="FullName" class="form-control" maxlength="50" min="3" required />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="Bio" class="control-label"></label>
                        <input asp-for="Bio" class="form-control" required />
                        <span asp-validation-for="Bio" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <button type="submit" value="Create" class="btn btn-success float-end">
                            Create <i class="uil uil-save"></i>
                        </button>
                        <a class="btn btn-secondary" asp-action="Index">
                            Show All <i class="uil uil-ellipsis-h"></i>
                        </a>
                    </div>
                </form>
                @*Form End*@

            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function(){
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#ProfilePictureURL").val();
        })
        $("#ProfilePictureURL").on("change", function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $(this).val();
        })
    </script>
}