@model Actor

@{
    ViewData["Title"] = "Delete actor";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-sm">
            <p>
                <h1>Delete Confirmation for @Model.FullName</h1>
            </p>
        </div>
    </div>
    <div class="d-flex justify-content-center">
        <div class="col-md-8">
            <div class="form-group text-center">
                <img class="border-info rounded-circle" style="max-width: 150px" id="ProfilePicturePreview" />
            </div>
            <br />
            <div class="form-group">
                <label asp-for="ProfilePictureURL" class="control-label"></label>
                <input asp-for="ProfilePictureURL" class="form-control" readonly />
                <span asp-validation-for="ProfilePictureURL" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" readonly />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Bio" class="control-label"></label>
                <input asp-for="Bio" class="form-control" readonly />
                <span asp-validation-for="Bio" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" value="Confirm" class="btn btn-danger float-end">Confirm <i class="uil uil-trash-alt"></i></button>
                </form>
                <a class="btn btn-secondary" asp-action="Index">Show All <i class="uil uil-ellipsis-h"></i></a>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#ProfilePictureUrl").val();
        })
    </script>
}